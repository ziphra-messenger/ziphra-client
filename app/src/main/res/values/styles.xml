<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="botonMarquee">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:autoSizeMinTextSize">10dp</item>


        <item name="android:foregroundGravity">center_vertical</item>
        <item name="android:gravity">center</item>

        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:minWidth">10dp</item>

        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">1</item>
        <item name="android:ellipsize">marquee</item>

        <item name="android:textSize">12dp</item>



        <item name="android:layout_margin">3dp</item>


        <item name="android:layout_weight">0</item>




        <item name="android:maxWidth">170dp</item>

        <item name="android:paddingLeft">10dp</item>

        <item name="android:paddingRight">10dp</item>



        <item name="android:visibility">visible</item>
    </style>

    <style name="menuAcordeonTituloStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#57AE74</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:visibility">visible</item>



        <item name="android:marqueeRepeatLimit">1</item>


    </style>
</resources>