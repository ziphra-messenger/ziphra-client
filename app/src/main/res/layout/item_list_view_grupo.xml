<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="1dp"
    android:background="#77C6FF95"
    android:orientation="vertical"
    android:textAlignment="center"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical">

        <TableRow android:background="#77C6FF95">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#77C6FF95"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_message_list_text"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginStart="5dp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="Prueba"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="0.1"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/tv_message_list_writting"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_weight="0"
                            android:backgroundTint="#77C6FF95"
                            android:foregroundGravity="center|right"
                            app:srcCompat="@drawable/ic_editing_pencil_icon__1_" />

                        <ImageView
                            android:id="@+id/grupo_candado_cerrado"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:foregroundGravity="center_vertical"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_baseline_lock_24_oscuro" />

                        <ImageView
                            android:id="@+id/grupo_candado_abierto"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:foregroundGravity="center_vertical"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_baseline_lock_open_24_grupo" />

                        <ImageButton
                            android:id="@+id/bt_grupo_invitation"
                            android:layout_width="50dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center|clip_vertical|center_horizontal"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/roundcorner"
                            android:backgroundTint="#9E71ED"
                            android:foregroundGravity="center_vertical|center|center_horizontal"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_baseline_group_add_24_item_grupo" />

                        <Button
                            android:id="@+id/bt_grupo_list_item_online"
                            android:layout_width="50dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="5dp"
                            android:backgroundTint="#23B34C"
                            android:gravity="center"
                            android:maxWidth="70dp"
                            android:text="33"
                            android:textAlignment="center"
                            android:textSize="11sp"
                            android:visibility="visible"
                            app:cornerRadius="100dp"
                            tools:visibility="visible" />

                        <Button
                            android:id="@+id/bt_message_detail_item_state"
                            android:layout_width="50dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="5dp"
                            android:backgroundTint="#3DA1CF"
                            android:focusable="false"
                            android:gravity="center"
                            android:maxWidth="70dp"
                            android:text="33"
                            android:textAlignment="center"
                            android:textSize="11sp"
                            android:visibility="gone"
                            app:cornerRadius="100dp"
                            app:iconPadding="0dp"
                            tools:visibility="visible" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </TableRow>

    </TableLayout>

</androidx.cardview.widget.CardView>