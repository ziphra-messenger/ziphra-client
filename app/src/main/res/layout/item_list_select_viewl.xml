<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/item_list_common__select__view__item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E4DFB4"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#77C6FF95"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/common__select__view__name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="1"
                android:clickable="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:longClickable="true"
                android:singleLine="true"
                android:text="RBZP-2295RBZP-2295RBZP-2295RBZP-2295gerergerergregregregRBZP-2295RBZP-2295"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>