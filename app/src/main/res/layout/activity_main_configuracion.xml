<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.mainconfiguracion.MainConfiguracionActivity">

    <LinearLayout
        android:id="@+id/main_conf_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E4DFB4"
        android:orientation="vertical"
        android:visibility="visible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/main_conf_server_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#57AE74"
            android:text="SERVIDOR"
            app:iconGravity="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/main_configuration_protocol" />

                <Spinner
                    android:id="@+id/main_conf_app_server_conf_prot"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_weight="0"
                    android:dropDownWidth="match_parent"
                    android:entries="@array/servers_http"
                    android:foregroundGravity="center_vertical|center|center_horizontal"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:spinnerMode="dialog"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="3dp"
                android:paddingEnd="3dp">

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/main_configuration_url_port" />

                <EditText
                    android:id="@+id/main_conf_app_server_conf"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_weight="0"
                    android:foregroundGravity="center_vertical|center|center_horizontal"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="100.11.11.11"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/main_conf_app_server_conf_port"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:dropDownWidth="wrap_content"
                    android:entries="@array/servers_ports"
                    android:foregroundGravity="center_vertical|center|center_horizontal"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/main_configuration_ips_default" />

                <Spinner
                    android:id="@+id/main_conf_app_server_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:dropDownWidth="match_parent"
                    android:entries="@array/main_configuration_app_servers"
                    android:fadeScrollbars="false"
                    android:focusable="true"
                    android:foregroundGravity="center_vertical|center|center_horizontal"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:isScrollContainer="true"
                    android:layoutMode="clipBounds"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbarSize="15dp"
                    android:spinnerMode="dialog" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/main_conf_app_server_select"


                    style="@style/botonMarquee"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"


                    android:layout_margin="3dp"
                    android:layout_marginStart="15dp"

                    android:layout_span="3"
                    android:layout_weight="0"
                    android:ellipsize="marquee"
                    android:enabled="true"
                    android:foregroundGravity="center_vertical"
                    android:gravity="center"
                    android:maxWidth="140dp"
                    android:minWidth="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp"
                    android:paddingRight="10dp"
                    android:scrollHorizontally="true"

                    android:singleLine="true"
                    android:text="@string/general__save"
                    android:textSize="12dp"
                    android:visibility="visible"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_action_confirm_tilde"
                    app:iconPadding="4dp"
                    app:iconSize="20dp" />


                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/main_conf_app_server__help"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"

                    android:backgroundTint="#E4DFB4"
                    android:foregroundGravity="center_vertical"
                    app:srcCompat="@drawable/ic_baseline_help_outline_24" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_conf__check__all"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="10dp"
            android:background="#E4DFB4"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            tools:visibility="visible">

            <Button
                android:id="@+id/main_conf__check__title"
                style="@style/menuAcordeonTituloStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#57AE74"
                android:text="Prueba Configuración"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/main_configuration__check_connections"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text3View7"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:text="@string/general__mobile_data" />

                    <TextView
                        android:id="@+id/main_conf__check__datos_moviles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:text="@string/general__wifi" />

                    <TextView
                        android:id="@+id/main_conf__check__wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textVi432432ew7"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:text="@string/general__internet" />

                    <TextView
                        android:id="@+id/main_conf__check__internet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:minWidth="100dp"
                        android:text="@string/general__server" />

                    <TextView
                        android:id="@+id/main_conf__check__server"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/main_conf__check__content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                android:visibility="visible"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="15dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="20dp" />

                    <Button
                        android:id="@+id/main_conf__check__start"


                        style="@style/botonMarquee"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"


                        android:layout_margin="3dp"
                        android:layout_marginStart="25dp"

                        android:layout_span="3"
                        android:layout_weight="0"
                        android:ellipsize="marquee"
                        android:enabled="true"
                        android:foregroundGravity="center_vertical"
                        android:gravity="center"
                        android:maxWidth="140dp"
                        android:minWidth="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="2dp"
                        android:paddingRight="10dp"
                        android:scrollHorizontally="true"

                        android:singleLine="true"
                        android:text="@string/general__test"
                        android:textSize="12dp"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/ic_starttest"
                        app:iconPadding="4dp"
                        app:iconSize="20dp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/main_conf_app_server__check"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="right|center_vertical"

                        android:backgroundTint="#E4DFB4"
                        android:foregroundGravity="center_vertical"
                        app:srcCompat="@drawable/ic_baseline_help_outline_24" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <include

        layout="@layout/incllude__common__all"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>