<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="3dp"
    android:background="#E4DFB4"
    android:backgroundTint="#E4DFB4"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/item_list_view_grupo_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/rounf"

        android:gravity="center_vertical"
        android:minWidth="390dp"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_grupo_info_itemlist_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:breakStrategy="balanced"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp_grupo_info_itemlist_roles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:entries="@array/roles" />

        <ImageButton
            android:id="@+id/ib_grupo_info_itemlist_remove_member"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="0.08"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/ic_baseline_person_remove_24" />

        <ImageButton
            android:id="@+id/ib_grupo_info_itemlist_save_role2"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#77C6FF95"
            android:scaleType="fitStart"
            android:tag="@string/tag_admin_gone"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_pause_24"
            tools:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/propio_item_list_view_grupo_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:alpha="0.2"

        android:background="@drawable/roundcorner"
        android:clickable="true"
        android:contextClickable="true"
        android:gravity="center_vertical"
        android:minWidth="390dp"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:id="@+id/propio_tv_grupo_info_itemlist_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:breakStrategy="balanced"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <Spinner
            android:id="@+id/propio_sp_grupo_info_itemlist_roles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:entries="@array/roles"
            android:tag="@string/tag_admin_gone"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <ImageButton
            android:id="@+id/propio_ib_grupo_info_itemlist_remove_member"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="0.08"
            android:backgroundTint="#00FFFFFF"
            android:tag="@string/tag_admin_gone"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_baseline_person_remove_24"
            tools:visibility="invisible" />

        <ImageButton
            android:id="@+id/propio_ib_grupo_info_itemlist_save_role2"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#77C6FF95"
            android:scaleType="fitStart"
            android:tag="@string/tag_admin_gone"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_pause_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/validation_item_list_view_grupo_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:alpha="0.3"

        android:background="@drawable/round_message_reply_view"
        android:clickable="true"
        android:contextClickable="true"
        android:gravity="center_vertical"
        android:minWidth="390dp"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <TextView
            android:id="@+id/validation_tv_grupo_info_itemlist_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:alpha="0"
            android:breakStrategy="balanced"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="TextView"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="invisible"
            tools:visibility="visible" />

        <Spinner
            android:id="@+id/validation_sp_grupo_info_itemlist_roles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:entries="@array/roles"
            android:tag="@string/tag_admin_gone"
            android:visibility="invisible"
            tools:visibility="invisible" />

        <ImageButton
            android:id="@+id/validation_ib_grupo_info_itemlist_remove_member"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="0.08"
            android:backgroundTint="#00FFFFFF"
            android:tag="@string/tag_admin_gone"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_baseline_person_remove_24"
            tools:visibility="invisible" />

        <ImageButton
            android:id="@+id/validation_ib_grupo_info_itemlist_save_role2"
            android:layout_width="47dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#77C6FF95"
            android:scaleType="fitStart"
            android:tag="@string/tag_admin_gone"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_pause_24" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>