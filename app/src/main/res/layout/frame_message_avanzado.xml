<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/vista_avanzada"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="#E4DFB4"
        android:orientation="vertical"
        android:padding="3dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:text="Envio Avanzado"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Black"
                android:visibility="visible" />

            <Spinner

                android:id="@+id/sp_message_avanzado_black_always"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#4C4949"
                android:dropDownWidth="50dp"

                android:spinnerMode="dialog"
                android:textSize="14sp"
                android:visibility="visible" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Anonimo" />

            <Spinner

                android:id="@+id/sp_message_avanzado_anonimo_always"
                android:layout_width="105dp"
                android:layout_height="wrap_content"

                android:spinnerMode="dialog"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_message_avanzado_anonimo_always"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Tiempo" />

            <Spinner
                android:id="@+id/sp_message_avanzado_time_values"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:addStatesFromChildren="false"
                android:focusedByDefault="false"
                android:spinnerMode="dialog"
                android:textAlignment="center" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Time" />

            <Spinner

                android:id="@+id/sp_message_avanzado_time_always"
                android:layout_width="105dp"
                android:layout_height="wrap_content"

                android:spinnerMode="dialog"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_message_avanzado_time_always"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Alias" />

            <Spinner

                android:id="@+id/sp_message_avanzado_change_nickname_number"
                android:layout_width="105dp"
                android:layout_height="wrap_content"

                android:spinnerMode="dialog"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_message_avanzado_change_nickname_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Reenvio" />

            <TextView
                android:id="@+id/tv_message_avanzado_reenvio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

            <Spinner

                android:id="@+id/sp_message_avanzado_reenvio"
                android:layout_width="105dp"
                android:layout_height="wrap_content"

                android:spinnerMode="dialog"
                android:textSize="14sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/grupo_info_conf_extra_encrip_titulo"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Extra" />

            <Spinner

                android:id="@+id/sp_message_avanzado_extra_aes_always"
                android:layout_width="105dp"
                android:layout_height="wrap_content"

                android:spinnerMode="dialog"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_message_avanzado_extra_aes_always"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/Descarga"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:text="Descarga" />

            <Spinner

                android:id="@+id/sp_message_avanzado_descarga"
                android:layout_width="105dp"
                android:layout_height="wrap_content"

                android:spinnerMode="dialog"
                android:textSize="14sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:text="Key" />

            <EditText
                android:id="@+id/tv_message_secret_key"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/ib_message_avanzado_show_secret_key"
                android:layout_width="38dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:backgroundTint="#E4DFB4"
                app:srcCompat="@drawable/ic_eye" />

            <ImageButton
                android:id="@+id/ib_message_avanzado_hide_secret_key"
                android:layout_width="38dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:backgroundTint="#E4DFB4"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_baseline_visibility_off_24" />

            <ImageButton
                android:id="@+id/ib_message_avanzado_copy"
                android:layout_width="50dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:backgroundTint="#E4DFB4"
                app:srcCompat="@drawable/ic_baseline_content_copy_20" />

            <Button
                android:id="@+id/bt_message_avanzada_auto_gen"
                android:layout_width="65dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:text="Gen"
                android:textSize="10sp"
                app:cornerRadius="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_span="3"
                android:text="Permitir Descargas"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/ib_message_avanzado_allow_download_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textVie2w6"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Imagen" />

            <Spinner

                android:id="@+id/sp_message_avanzado_allow_download_imagen"
                android:layout_width="105dp"
                android:layout_height="match_parent"

                android:spinnerMode="dialog"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_message_avanzado_allow_download_imagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone" />
            <CheckBox
                android:id="@+id/ib_message_avanzado_allow_download_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:text="Recepcion Avanzado"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="Black" />

            <Spinner

                android:id="@+id/sp_message_avanzado_black_recepcion"
                android:layout_width="105dp"
                android:layout_height="wrap_content"

                android:textSize="14sp" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Anonimo" />

            <Spinner

                android:id="@+id/sp_message_avanzado_anonimo_recepcion"
                android:layout_width="105dp"
                android:layout_height="wrap_content"

                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:tag="@string/help_tag_message_avanzado">


            <Button
                android:id="@+id/bt_message_avanzado_clse"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Cerrar"
                android:textAlignment="gravity"
                android:textSize="12sp"
                app:cornerRadius="20dp"

                app:iconGravity="end" />

            <Button
                android:id="@+id/bt_message_avanzado_save"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginEnd="3dp"
                android:layout_span="3"
                android:gravity="center_horizontal"
                android:text="Guardar"
                android:textAlignment="gravity"
                android:textSize="12sp"
                app:cornerRadius="20dp"

                app:iconGravity="end" />

            <include
                android:id="@+id/message_avanzado_help_include"
                layout="@layout/frame_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:visibility="gone">


            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rb_message_send_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Archivo"
                android:visibility="gone" />

            <Button
                android:id="@+id/enviar_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>