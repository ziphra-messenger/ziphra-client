<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F1DEDE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_action_help_floting_1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="12dp"
            android:layout_height="14dp"
            android:background="@drawable/ic_baseline_send_error"
            android:outlineSpotShadowColor="#9F3434"
            android:shadowColor="#BA8E8E"
            android:textColor="#2A2A6FB8"
            android:textColorHint="#D35656"
            android:textSize="24sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>