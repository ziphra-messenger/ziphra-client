<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/my_account_lock_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4DFB4"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:visibility="visible">

        <Button
            android:id="@+id/my_account_lock_title"
            style="@style/menuAcordeonTituloStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#57AE74"
            android:text="@string/frame_my_account_lock"
            app:iconGravity="end" />

        <LinearLayout
            android:id="@+id/my_account_lock_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:foregroundGravity="center_vertical"
            android:orientation="vertical"
            android:tag="@string/help_tag_myaccount_lock"
            android:visibility="gone"
            tools:visibility="visible">

            <Switch
                android:id="@+id/my_account_lock_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center_vertical"
                android:padding="10dp"
                android:text="@string/frame_my_account_lock_activar" />

            <EditText
                android:id="@+id/my_account_lock_minutos"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:foregroundGravity="center_vertical"
                android:gravity="center"
                android:hint="Minutos"
                android:inputType="number"
                android:padding="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/my_account_lock_en_horas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                android:text="TextView"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_vertical"
                android:gravity="center|center_vertical"
                android:orientation="horizontal">

                <NumberPicker
                    android:id="@+id/my_account_lock_picker_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center|center_vertical"
                    android:background="#5EC8FAC4"
                    android:clickable="true"
                    android:gravity="center|center_vertical"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=":"
                    android:textSize="24sp" />

                <NumberPicker
                    android:id="@+id/my_account_lock_picker_minutos"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center|center_vertical"
                    android:background="#5EC8FAC4"
                    android:clickable="true"
                    android:gravity="center|center_vertical"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=":"
                    android:textSize="24sp" />

                <NumberPicker
                    android:id="@+id/my_account_lock_picker_segundos"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="center|center_vertical"
                    android:background="#5EC8FAC4"

                    android:gravity="center|center_vertical"

                    />
            </LinearLayout>

            <TextView
                android:id="@+id/my_account_lock__validate"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxWidth="280dp"
                android:maxLines="20"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:text="@string/frame_my_account_lock_validate_min_seconds"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:foregroundGravity="center_vertical"
                android:padding="10dp"
                android:text="@string/frame_my_account_lock_mensaje" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="13dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    android:foregroundGravity="right"
                    android:tag="@string/frame_help__frame_my_account__lock">

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/my_account_lock_help_include"
                        app:layout_constraintHorizontal_bias="0.52"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                        <Button
                            android:id="@+id/my_account_lock_default"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"

                            android:layout_gravity="center"
                            android:layout_margin="3dp"
                            android:layout_weight="0"

                            android:height="40dp"
                            android:ellipsize="marquee"
                            android:enabled="true"
                            android:foregroundGravity="center_vertical"
                            android:gravity="center"
                            android:maxWidth="170dp"
                            android:minWidth="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="@string/general__recomendado"
                            android:textSize="12dp"
                            android:visibility="visible"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/ic_baseline_engineering_24"
                            app:iconPadding="4dp"
                            tools:visibility="visible" />

                        <Button

                            android:id="@+id/my_account_lock_save"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"

                            android:layout_weight="0"
                            android:height="40dp"
                            android:ellipsize="marquee"
                            android:enabled="false"
                            android:gravity="center"
                            android:maxWidth="140dp"
                            android:minWidth="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="@string/general__save"
                            android:textSize="12dp"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/ic_action_confirm_tilde"
                            app:iconPadding="4dp"
                            app:iconSize="20dp" />
                    </LinearLayout>

                    <include
                        android:id="@+id/my_account_lock_help_include"
                        layout="@layout/frame_help__open"
                        android:layout_width="47dp"
                        android:layout_height="37dp"
                        android:foregroundGravity="left|right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>