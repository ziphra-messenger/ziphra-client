<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.codigoinvitacion.CodigoInvitacionActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="450dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="3dp"
        android:background="#E4DFB4"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/tl_myaccount_menu_codigo_invitacion_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="#E4DFB4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:gravity="center|center_horizontal|center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_marginStart="10dp"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="Código de Invitación"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:gravity="center_horizontal|center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/codigo_invitacion"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        android:drawableEnd="@drawable/ic_baseline_clear_24"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textAlignment="center" />

                    <ImageButton
                        android:id="@+id/ib_codigo_invitacion_copy"
                        android:layout_width="29dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        android:backgroundTint="#E4DFB4"
                        android:foregroundGravity="center_vertical|center"
                        app:srcCompat="@drawable/ic_copy_clipboard" />

                    <ImageButton
                        android:id="@+id/bt_myaccount_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_vertical"
                        android:background="@color/purple_500"
                        android:backgroundTint="#E4DFB4"
                        app:srcCompat="@drawable/ic_sare" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:gravity="center|center_horizontal|center_vertical">

                <TextView
                    android:id="@+id/codigo_invitacion_validate"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:maxWidth="280dp"
                    android:maxHeight="35dp"
                    android:maxLines="2"
                    android:minHeight="35dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="279dp"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="0dp"
                android:gravity="center|center_horizontal|center_vertical">

                <ImageView
                    android:id="@+id/qr"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:foregroundGravity="center_vertical|center|center_horizontal"
                    tools:srcCompat="@tools:sample/avatars" />

            </TableRow>

            <TableRow
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:gravity="center|center_horizontal|center_vertical">

                <Button
                    android:id="@+id/bt_myaccount_generar_codigo_invitacion"
                    style="@style/botonMarquee"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center|center_vertical"

                    android:layout_marginTop="10dp"
                    android:ellipsize="marquee"
                    android:enabled="true"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:maxWidth="280dp"
                    android:minWidth="10dp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/codigoinvitacion_activity__generate_and_save"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_baseline_miscellaneous_services_24"
                    app:strokeColor="#8FFF0000"
                    app:strokeWidth="7px" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                android:gravity="center|center_horizontal|center_vertical">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:tag="@string/help_tag_invitationcode_save">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_codigo_invitacion_reset"
                            style="@style/botonMarquee"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginEnd="15dp"
                            android:ellipsize="marquee"

                            android:maxWidth="180dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="@string/codigoinvitacion_activity__reset"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/ic_action_undo" />

                        <Button
                            android:id="@+id/bt_myaccount_codigo_invitacion_guardar"
                            style="@style/botonMarquee"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="15dp"
                            android:ellipsize="marquee"

                            android:maxWidth="180dp"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="@string/codigoinvitacion_activity__save"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/ic_action_confirm_tilde" />
                    </LinearLayout>

                    <include
                        layout="@layout/frame_help__open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>

            </TableRow>

        </TableLayout>
    </LinearLayout>

    <include

        layout="@layout/incllude__common__all"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>