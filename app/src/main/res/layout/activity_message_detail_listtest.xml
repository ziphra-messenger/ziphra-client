        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="#E4DFB4"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <Button
                android:id="@+id/message_detail__grupo_name"
                style="@style/menuAcordeonTituloStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_weight="0"
                android:clickable="false"
                android:contextClickable="false"
                android:ellipsize="marquee"
                android:gravity="center|center_horizontal|center_vertical"
                android:longClickable="true"
                android:maxWidth="280dp"
                android:paddingLeft="0dp"
                android:paddingTop="10dp"
                android:paddingRight="0dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:text="nombre grupo"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:cornerRadius="0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/message_detail__hide_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:layout_weight="0"
            android:gravity="center"
            android:maxWidth="280dp"
            android:padding="10dp"
            android:text="@string/message_detail_activity__hide_read_message"
            android:textColor="#FFFFFF" />

        <EditText
