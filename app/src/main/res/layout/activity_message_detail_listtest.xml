                app:iconSize="24dp"
                app:iconTint="#000000"
                app:strokeColor="#2655BB"
                app:strokeWidth="0dp"
                tools:visibility="gone" />

            <Button

                android:id="@+id/message_detail__icon__is_audio_message"
