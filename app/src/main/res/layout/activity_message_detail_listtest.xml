                android:textColorLink="#0101ff"
                android:textSize="8sp"
                app:icon="@drawable/ic_baseline_remove_red_eye_24"
                app:iconPadding="0dp"
                app:iconSize="24dp"
                app:iconTint="#000000"
                app:strokeColor="#2655BB"
                app:strokeWidth="0dp" />

