                android:textColor="#0101ff"
                android:textColorLink="#0101ff"
                android:textSize="8sp"
                app:icon="@drawable/ic_twotone_reply_message_toolbar_24"
                app:iconPadding="0dp"
                app:iconSize="24dp"
                app:iconTint="#000000"
                app:strokeColor="#2655BB"
                app:strokeWidth="0dp" />

            <Button

                android:id="@+id/message_detail__icon__is_extra_encrypt"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:background="#000000"

                android:clickable="false"
                android:ellipsize="end"
                android:foregroundGravity="center"
                android:gravity="center"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:paddingStart="10dp"

                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingEnd="16dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="#0101ff"
                android:textColorLink="#0101ff"
                android:textSize="8sp"
                app:icon="@drawable/ic_baseline_lock_24_msg_item_list"
                app:iconPadding="0dp"
                app:iconSize="24dp"
                app:iconTint="#000000"
                app:strokeColor="#2655BB"
                app:strokeWidth="0dp" />

