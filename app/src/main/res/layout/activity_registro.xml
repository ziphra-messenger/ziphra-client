<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lo_registro_contraint_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/multitud"
    tools:context="com.privacity.cliente.activity.registro.RegistroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/login_stylo"
                android:orientation="vertical"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingEnd="30dp"
                android:paddingBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.120000005">

                <LinearLayout
                    android:id="@+id/ll_username_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_stylo"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxWidth="80dp"
                        android:minWidth="100dp"
                        android:singleLine="true"
                        android:text="@string/register_activity__usuario" />

                    <EditText
                        android:id="@+id/tv_registro_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:ellipsize="end"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:lines="1"
                        android:maxWidth="230dp"
                        android:minWidth="150dp"
                        android:singleLine="true" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_username_val_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_registro_username_validate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:maxWidth="280dp"
                        android:maxLines="15"
                        android:minWidth="100dp"
                        android:text="@string/register_activity__requerido"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_password_1_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxWidth="80dp"
                        android:minWidth="100dp"
                        android:singleLine="true"
                        android:text="@string/register_activity__password" />

                    <EditText
                        android:id="@+id/tv_registro_password1"

                        android:layout_width="wrap_content"


                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:maxWidth="180dp"
                        android:minWidth="100dp"
                        android:singleLine="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/password_eye_confirmation_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:backgroundTint="#E4DFB4"
                            app:srcCompat="@drawable/ic_eye" />

                        <ImageButton
                            android:id="@+id/password_eye_confirmation_hide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#E4DFB4"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_baseline_visibility_off_24" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_password_1_val_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_registro_password1_validacion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:maxWidth="280dp"
                        android:maxLines="15"
                        android:text="@string/register_activity__requerido"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_password_2_reg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxWidth="80dp"
                        android:minWidth="100dp"
                        android:singleLine="true"
                        android:text="@string/register_activity__password" />

                    <EditText
                        android:id="@+id/tv_registro_password2"

                        android:layout_width="wrap_content"


                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:ems="10"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:maxWidth="180dp"
                        android:minWidth="100dp"
                        android:singleLine="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/password_eye_confirmation_show2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:backgroundTint="#E4DFB4"
                            app:srcCompat="@drawable/ic_eye" />

                        <ImageButton
                            android:id="@+id/password_eye_confirmation_hide2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#E4DFB4"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_baseline_visibility_off_24" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_password_2_val_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_registro_password2_validacion_equal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:maxWidth="280dp"
                        android:maxLines="4"
                        android:text="@string/register_activity__requerido"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/tv_registro_aceptar"
                    style="@style/botonMarquee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="marquee"
                    android:maxWidth="250dp"

                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/register_activity__submit"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/ic_baseline_how_to_reg_24" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pb_registro"
        style="?android:attr/progressBarStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="200dp"
        android:alpha="100"
        android:background="#E4DBDB"
        android:backgroundTintMode="src_atop"
        android:progressBackgroundTint="#007A2222"
        android:requiresFadingEdge="horizontal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/include2"
        layout="@layout/incllude__common__progress_bar"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.050000012"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_registro_creando"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="100"
        android:background="#D7D46600"


        android:backgroundTintMode="src_atop"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:requiresFadingEdge="horizontal"
        android:text="@string/register_activity__submit__procesando"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <include

        layout="@layout/incllude__common__all"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>